<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_show_radius"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/show_cover_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail2"
                android:paddingLeft="@dimen/show_title_padding"
                android:paddingRight="@dimen/show_title_padding"
                android:paddingTop="@dimen/show_title_padding"
                android:textColor="@color/show_title"
                android:textSize="@dimen/show_title" />

            <TextView
                android:id="@+id/rating2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title2"
                android:paddingBottom="@dimen/show_rating_padding_bottom"
                android:paddingLeft="@dimen/show_title_padding"
                android:paddingRight="@dimen/show_title_padding"
                android:textSize="@dimen/show_rating"
                android:drawableLeft="@drawable/ic_star_rate_black_18dp"
                android:drawablePadding="2dp"/>

            <ImageView
                android:id="@+id/overflow2"
                android:layout_width="@dimen/ic_show_overflow_width"
                android:layout_height="@dimen/ic_show_overflow_height"
                android:layout_alignParentRight="true"
                android:layout_below="@id/thumbnail2"
                android:layout_marginTop="@dimen/ic_show_overflow_margin_top"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_dots" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>